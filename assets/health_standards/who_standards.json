  "bmi": {
    "adults": {
      "age_range": "18-120",
      "unit": "kg/m²",
      "reference": "WHO BMI Classification",
      "categories": {
        "underweight": {
          "max": 18.5,
          "description": "Underweight",
          "risk_level": "warning",
          "recommendation": "You should pay attention to your nutrition to gain weight in a healthy way. Consulting a dietitian is recommended."
        },
        "normal": {
          "min": 18.5,
          "max": 24.9,
          "description": "Normal weight",
          "risk_level": "low",
          "recommendation": "Great! Keep maintaining your weight. Eat a balanced diet and exercise regularly."
        },
        "overweight": {
          "min": 25.0,
          "max": 29.9,
          "description": "Overweight",
          "risk_level": "warning",
          "recommendation": "You can reach your ideal weight with a more active lifestyle and balanced nutrition. Exercise at least 150 minutes of moderate intensity per week."
        },
        "obese_class_1": {
          "min": 30.0,
          "max": 34.9,
          "description": "Obese (Class I)",
          "risk_level": "moderate",
          "recommendation": "You should aim to lose weight by consulting a specialist for your health. Your risk of Type 2 diabetes and cardiovascular disease has increased."
        },
        "obese_class_2": {
          "min": 35.0,
          "max": 39.9,
          "description": "Obese (Class II)",
          "risk_level": "high",
          "recommendation": "You should see a doctor urgently. There are serious health risks. Joining a professional weight management program is recommended."
        },
        "obese_class_3": {
          "min": 40.0,
          "description": "Morbidly Obese (Class III)",
          "risk_level": "very_high",
          "recommendation": "You should urgently consult an endocrinology specialist. Morbid obesity seriously affects quality of life and can lead to various complications."
        }
      }
    },
    "children": {
      "age_range": "2-18",
      "note": "BMI assessment in children should be done using age and gender percentile charts.",
      "reference": "WHO Child Growth Standards",
      "reference_url": "https://www.who.int/tools/child-growth-standards"
    }
  },

